<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:local="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="2dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="5dp"
        android:text="POSITIVE"
        local:MvxBind="Text TestTemplate.ResultDisplay"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
          android:layout_width="40dp"
          android:layout_height="wrap_content"
          android:text="Kit:"
          android:textAlignment="textEnd"
          android:paddingRight="5dp"/>
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingRight="10dp"
          android:text="First Response Kit"
          local:MvxBind="Text TestTemplate.KitDisplay"/>
        <TextView
          android:layout_width="50dp"
          android:layout_height="wrap_content"
          android:text="Name:"
          android:textAlignment="textEnd"
          android:paddingRight="5dp"
          local:MvxBind="Visibility TestTemplate.ShowKitOther, Converter=Visibility"/>
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingRight="2dp"
          android:text="Other Kit XXX"
          local:MvxBind="Text TestTemplate.KitOther;Visibility TestTemplate.ShowKitOther, Converter=Visibility" />
      </LinearLayout>
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
          android:id="@+id/textView2"
          android:layout_width="40dp"
          android:layout_height="wrap_content"
          android:paddingRight="5dp"
          android:textAlignment="textEnd"
          android:text="Lot:" />

        <TextView
          android:id="@+id/textView3"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:paddingRight="2dp"
          android:text="123551212"
          local:MvxBind="Text TestTemplate.LotNumber"/>

        <TextView
          android:id="@+id/textView4"
          android:layout_width="0dp"
          android:layout_weight=".5"
          android:layout_height="wrap_content"
          android:textAlignment="textEnd"
          android:paddingRight="5dp"
          android:text="Expiry:" />

        <TextView
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:text="20 AUG 2018"
          local:MvxBind="Text TestTemplate.Expiry, Converter=Dmy"
          android:paddingLeft="2dp"/>
      </LinearLayout>
    </LinearLayout>

  </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"

  >

    <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Edit"
      local:MvxBind="Click EditTestCommand"/>
    <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Delete"
      local:MvxBind="Click RemoveTestCommand"/>
  </LinearLayout>

</LinearLayout>
