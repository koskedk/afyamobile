<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:local="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="10dp">

  <TextView
    android:id="@+id/textViewError"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Error"
    android:textColor="@android:color/holo_red_dark"
    local:MvxBind="Text HIVTestTemplate.ErrorSummary" />

  <TextView
    android:id="@+id/textViewKit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Kit" />

  <MvxSpinner
    android:id="@+id/spinnerKit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    local:MvxBind="ItemsSource HIVTestTemplate.Kits;SelectedItem HIVTestTemplate.SelectedKit" />

  <android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    local:MvxBind="Visibility HIVTestTemplate.ShowKitOther, Converter=ShowControl">

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="other kit name"
      local:MvxBind="Text HIVTestTemplate.KitOther;Visibility HIVTestTemplate.ShowKitOther, Converter=ShowControl" />
  </android.support.design.widget.TextInputLayout>

  <android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
      android:id="@+id/editText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Lot"
      local:MvxBind="Text HIVTestTemplate.LotNumber" />
  </android.support.design.widget.TextInputLayout>

  <android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
      android:id="@+id/editText2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:clickable="true"
      android:editable="false"
      android:hint="Expiry"
      local:MvxBind="Text HIVTestTemplate.Expiry, Converter=Dmy; Click ShowDateDialogCommand" />
  </android.support.design.widget.TextInputLayout>

  <TextView
    android:id="@+id/textViewKit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Result" />

  <MvxSpinner
    android:id="@+id/spinnerKit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    local:MvxBind="ItemsSource HIVTestTemplate.Results; SelectedItem HIVTestTemplate.SelectedResult" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
      android:id="@+id/buttonSave"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="Save"
      local:MvxBind="Click SaveTestCommand" />

    <Button
      android:id="@+id/buttonCancel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="Cancel"
      local:MvxBind="Click CancelTestCommand" />
  </LinearLayout>
</LinearLayout>

