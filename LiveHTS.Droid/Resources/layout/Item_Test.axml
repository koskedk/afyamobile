<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    local:MvxBind="Text Attempt" />
  
  <TextView
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:textSize="40dp"
      android:text="Kit Name" />
  <MvxSpinner
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="40dp"
    local:MvxBind="ItemsSource TestKits;SelectedItem SelectedTestKit" />
  <TextView
    android:text="Other Kit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    local:MvxBind="Visibility ShowOtherTestKit, Converter=Visibility"/>
  <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    local:MvxBind="Text OtherTestKit;Visibility ShowOtherTestKit, Converter=Visibility" />
  <TextView
    android:text="Lot Number"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
  <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    local:MvxBind="Text LotNumber" />
  <TextView
    android:text="Expiry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
  <MvxDatePicker
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textSize="40dp"
    local:MvxBind="Value Expiry;"
    android:calendarViewShown="false"
    android:datePickerMode="spinner" />

  <TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textSize="40dp"
    android:text="Test Result" />
  <MvxSpinner
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="40dp"
    local:MvxBind="ItemsSource TestResults;SelectedItem SelectedTestResult" />
</LinearLayout>